<div class="basic-grey">
  <script>
    $.notify("<%= "#{notice}" %>", "success");
  </script>

  <%= render partial: '/shared/header' %>

  <%= link_to "+", new_kind_path, class: "button_new" %>

  <h2><%= "#{t("messages.listing")} #{@kinds.model.model_name.human(count: @kinds.size)}" %></h2>

  <table>
    <thead>
      <tr>
        <th><%= Kind.human_attribute_name("description") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle('#f0f0f5', 'white') %>">
          <td><%= kind.description %></td>
          <td><%= link_to t("link_to.show"), kind %></td>
          <td><%= link_to t("link_to.edit"), edit_kind_path(kind) %></td>
          <td><%= link_to t("link_to.destroy"), kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br><br>

  <div class="paginate"><%= paginate @kinds %></div>

</div>

<%= form_for(phone, html: { class: 'basic-grey' }) do |f| %>

  <h1>
    <%= title %>
    <span><%= description %></span>
  </h1>

  <% if phone.errors.any? %>
    <div id="error_explanation">
      <h2><%= phone.errors.count %> erro(s) ocorreram:</h2>

      <ul>
      <% phone.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <br>
  <% end %>

  <div class="field">
    <label><%= Phone.human_attribute_name("phone") %>:</label>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <label><%= Phone.human_attribute_name("contact_id") %>:</label>
    <%= collection_select(:phone, :contact_id, @contact_options_for_select, :id, :name) %>
  </div>

  <div class="actions">
    &nbsp;
    <%= f.submit t("button.submit"), class: 'button' %>
    <%= link_to t("link_to.back"), phones_path, class: 'button' %>
  </div>
<% end %>

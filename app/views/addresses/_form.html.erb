<%= form_for(address, html: { class: 'basic-grey' }) do |f| %>

  <h1>
    <%= title %>
    <span><%= description %></span>
  </h1>

  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= address.errors.count %> erro(s) ocorreram:</h2>

      <ul>
      <% address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <br>
  <% end %>

  <div class="field">
    <label><%= Address.human_attribute_name("street") %>:</label>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <label><%= Address.human_attribute_name("city") %>:</label>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <label><%= Address.human_attribute_name("state") %>:</label>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <label><%= Address.human_attribute_name("contact_id") %>:</label>
    <%= collection_select(:address, :contact_id, @contact_options_for_select, :id, :name) %>
  </div>

  <div class="actions">
    &nbsp;
    <%= f.submit t("button.submit"), class: 'button' %>
    <%= link_to t("link_to.back"), addresses_path, class: 'button' %>
  </div>
<% end %>
